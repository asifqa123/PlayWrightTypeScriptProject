{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noEmit": true,
    "lib": ["esnext", "dom"],
    "types": ["node", "@playwright/test"]
  },
  "include": [
    "**/*.ts",
    "**/*.d.ts",
    "playwright.config.js" // Make sure this file exists or remove if not needed in include
  ],
  "exclude": [
    "node_modules",
    "./dist"
  ]
}
