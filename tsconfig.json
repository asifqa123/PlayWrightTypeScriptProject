{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".", // Added baseUrl
    "paths": {      // Added paths mapping
      "types/*": ["types/*"]
    },
    "noEmit": true,
    "lib": ["esnext", "dom"],
    "types": ["node", "@playwright/test"]
  },
  "include": [
    "**/*.ts",
    "**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "./dist"
  ]
}
